<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/chat_item_LL"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <TextView
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:id="@+id/chat_item_tv_timeleft"
        android:layout_height="match_parent"
        android:textSize="11sp"
        android:gravity="bottom"
        android:visibility="gone"
        android:text="오전 05:12" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            tools:text="임규원" />

        <TextView
            android:id="@+id/chat_item_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/prac_chat_background"
            android:padding="13dp"
            android:textSize="14sp"
            tools:text="안녕하세요 저는 임규원입니다." />
    </LinearLayout>

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:id="@+id/chat_item_tv_timeright"
        android:layout_height="match_parent"
        android:textSize="11sp"
        android:gravity="bottom"
        android:text="오전 05:12" />

</LinearLayout>